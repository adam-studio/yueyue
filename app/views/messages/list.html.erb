<div class="nav">
	<%=I18n.t("messages.message_type_#{@message_type}")%>
</div>
<div class="kk2">
	<%@messages.each do |message|%>
	<div class="bt">
		<% if @message_type == Message::FRIEND_REQUEST %>
		<%=link_to message.other_user_name, message.other_user%>: <%= link_to('加为好友', url_for(:controller => 'groups', :action => 'add_user', :user_id => message.other_user.id))%>
		<% else %>
		<%=link_to message.other_user_name, message.other_user%>
		<%=simple_format message.content%>
		<% end %>
	</div>
	<%end%>
</div>
<br />

<div class="kk2">
	<%= will_paginate @messages %>
</div>
