	<%
	
	sanguoshas = @yueyues[:sanguoshas]
	sanguoshas.each do |sanguosha|
		%>
		<div class="bt">
		<%=
		if (sanguosha.yueyue_owner)
			user = User.find(sanguosha.yueyue_owner)
			if user
				user.name
			end
		end
		%>
		 
		<%= link_to sanguosha.description, sanguosha %> <span><%= sanguosha.yueyue_date %></span>
		</div>
		<%
		end
		%>
		<%
		movies = @yueyues[:movies]
		movies.each do |movie|
			%>
			<div class="bt">
			<%=
			if (movie.yueyue_owner)
				user = User.find(movie.yueyue_owner)
				if user
					user.name
				end
			end
			%>

			<%= link_to movie.description, movie %> <span><%= movie.yueyue_date %></span>
			</div>
			<%
			end
	%>



