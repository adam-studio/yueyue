<%= form_tag(:action => "search") do %> 
 <p><%= label_tag(:q, "请输入区号或者城市名，如：010、北京") %> </p>
  <%= text_field_tag(:q) %>  
  <%= submit_tag("切换") %>
  <% end %> 
  
<% if session[:notice] != nil %>
      <p><%= session[:notice] %><p>
      <% session[:notice] = nil %>
<% end %>
		
<% @cities.each do |city| %>
    <td><%= link_to city.name, {:action => "change_city", :id => city} %></td>
<% end %>

<p></p>

<% @Alphabet.each do |letter| %>
  <%= link_to letter, {:action => "index_by_letter", :id => letter} %>
<% end %>
<br />

<p></p>

<%= link_to '返回', @return_url %>
