<% if @account.errors.any? %>
  <div class="error">
    <% @account.errors[:base].each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
<% end %>

<div class="bd">
	<%= form_tag(:action => "create") do %>
	<label>你的邮箱地址</label>
	<div class="item">
		<%= text_field_tag(:account_name) %>
	</div>
	<label>你在约约的昵称</label>
	<div class="item">
		<%= text_field_tag(:nick_name) %>
	</div>
	<label>你在约约的密码</label>
	<div class="item">
		<%= password_field_tag(:password) %>
	</div>
	<label>确认你在约约的密码</label>
	<div class="item">
		<%= password_field_tag(:password_confirmation) %>
	</div>
		<%= hidden_field_tag(:account_type, 'email') %>
	<div class="submit-item">
		<%= submit_tag "注册" %>
	</div>
	<% end %>
</div>

