<div>
	<% form_tag do %>
	<div>
		<% if flash[:notice] %>
		<%= flash[:notice] %><br/>
		<% end %>
		邮箱<br/>
		<%= text_field_tag(:account_name) %><br/>
		密码<br/>
		<%= password_field_tag(:account_password) %><br/>
		<%= hidden_field_tag 'account_type', 'email'%>
		<%= submit_tag "登录" %>
		<%= link_to '注册', new_user_path %>  

	</div>
	<% end %>
</div>
<%= link_to(image_tag("sina_weibo.png"),
{ :action => "login", :account_type => "sina"}) %>
